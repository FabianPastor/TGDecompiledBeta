<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:aapt="http://schemas.android.com/aapt" android:theme="@style/Theme.TMessages.AppWidget" android:id="@+id/shortcut_widget_item" android:layout_width="match_parent" android:layout_height="72dp" android:minHeight="72dp">
    <ImageView android:gravity="start" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/shortcut_widget_item_avatar" android:layout_width="54dp" android:layout_height="54dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:src="?attr/widgetPreviewImage"/>
    <RelativeLayout android:layout_gravity="top|left|center_vertical|center_horizontal|center|start" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp">
        <TextView android:textSize="17dp" android:textColor="@color/widget_name" android:ellipsize="end" android:gravity="start" android:id="@+id/shortcut_widget_item_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="?attr/widgetPreviewTitle" android:singleLine="true" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="13dp" android:textColor="@color/widget_time" android:id="@+id/shortcut_widget_item_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="?attr/widgetPreviewTime"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="top|left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="37dp">
        <TextView android:textSize="16dp" android:textColor="@color/widget_text" android:textColorLink="@color/widget_text" android:ellipsize="end" android:gravity="start" android:autoLink="none" android:id="@+id/shortcut_widget_item_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="?attr/widgetPreviewContent" android:singleLine="true"/>
        <TextView android:id="@+id/shortcut_widget_item_badge" android:visibility="?attr/widgetPreviewDot" android:text="2" style="@style/TMessages.AppWidget.Badge"/>
    </RelativeLayout>
    <FrameLayout android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" android:id="@+id/shortcut_widget_item_divider" android:background="@color/widget_divider" android:layout_width="match_parent" android:layout_height="1px"/>
</FrameLayout>
